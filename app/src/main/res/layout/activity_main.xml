<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@+id/connect"
        android:text="@string/searched_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.039" />

    <Button
        android:id="@+id/connect"
        android:layout_width="116dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="4dp"
        android:insetRight="0dp"
        android:text="@string/connected_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toEndOf="@+id/search"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04" />

    <Button
        android:id="@+id/Off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="2dp"
        android:layout_toStartOf="@+id/search"
        android:text="@string/off_button" />

    <Button
        android:id="@+id/On"
        android:layout_width="103dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_toStartOf="@+id/Off"
        android:insetLeft="4dp"
        android:text="@string/on_button" />


    <Button
        android:id="@+id/sendForward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="164dp"
        android:text="@string/forward_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <TextView
        android:id="@+id/PairedTextView"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/On"
        android:layout_alignParentStart="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="16dp"
        android:text="@string/textview_paired"
        android:textColor="@android:color/black" />


    <TextView
        android:id="@+id/FoundTextView"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/connect"
        android:layout_alignParentStart="true"
        android:layout_marginStart="286dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="16dp"
        android:text="@string/textview_found"
        android:textColor="@android:color/black" />

    <ListView
        android:id="@+id/PairedListView"
        android:layout_width="110dp"
        android:layout_height="54dp"
        android:layout_below="@+id/FoundTextView"
        android:layout_marginStart="6dp"
        android:layout_marginTop="14dp"
        android:gravity="center"


        />

    <ListView
        android:id="@+id/FoundListView"
        android:layout_width="110dp"
        android:layout_height="54dp"
        android:layout_below="@+id/PairedTextView"
        android:layout_marginStart="264dp"
        android:layout_marginTop="14dp"
        android:gravity="center"


        />


</RelativeLayout>

